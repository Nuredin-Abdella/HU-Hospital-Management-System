<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu_hospital.management.system.LaboratoryController">
   <children>
      <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Laboratory Management" />
      
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Pending Lab Tests" />
                  <TableView fx:id="pendingTestsTable" prefHeight="250.0">
                    <columns>
                      <TableColumn fx:id="testIdColumn" prefWidth="80.0" text="Test ID" />
                      <TableColumn fx:id="patientNameColumn" prefWidth="120.0" text="Patient Name" />
                        <TableColumn fx:id="testTypeColumn" prefWidth="150.0" text="Test Type" />
                        <TableColumn fx:id="orderDateColumn" prefWidth="120.0" text="Order Date" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                    </columns>
                  </TableView>
                  <HBox spacing="10.0">
                     <children>
                        <Button onAction="#startTest" prefWidth="100.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Start Test" />
                        <Button onAction="#completeTest" prefWidth="100.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Complete Test" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Test Details" />
                  <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Test ID:" />
                        <Label fx:id="selectedTestIdLabel" GridPane.columnIndex="1" />
                        <Label text="Patient:" GridPane.rowIndex="1" />
                        <Label fx:id="selectedPatientLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Test Type:" GridPane.rowIndex="2" />
                        <Label fx:id="selectedTestTypeLabel" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Description:" GridPane.rowIndex="3" />
                        <Label fx:id="selectedDescriptionLabel" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Ordered By:" GridPane.rowIndex="4" />
                        <Label fx:id="selectedDoctorLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <VBox spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Test Results" />
            <VBox spacing="10.0">
               <children>
                  <Label text="Test Results:" />
                  <TextArea fx:id="resultsArea" prefRowCount="6" promptText="Enter test results here..." />
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button onAction="#saveResults" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Save Results" />
                  <Button onAction="#printResults" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Print Results" />
                  <Button onAction="#sendToDoctor" prefWidth="120.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Send to Doctor" />
               </children>
            </HBox>
            <Label fx:id="labStatusLabel" style="-fx-font-weight: bold;" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>