<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu_hospital.management.system.DoctorConsultationController">
   <children>
      <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Doctor Consultation" />
      
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Patient Queue" />
                  <TableView fx:id="waitingPatientsTable" prefHeight="200.0">
                    <columns>
                      <TableColumn fx:id="queueNumColumn" prefWidth="60.0" text="Queue #" />
                      <TableColumn fx:id="patientNameColumn" prefWidth="120.0" text="Patient Name" />
                        <TableColumn fx:id="patientIdColumn" prefWidth="80.0" text="Patient ID" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                    </columns>
                  </TableView>
                  <Button fx:id="callNextPatientBtn" onAction="#callNextPatient" prefWidth="150.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Call Next Patient" />
               </children>
            </VBox>
            
            <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Current Patient" />
                  <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Name:" />
                        <Label fx:id="currentPatientNameLabel" GridPane.columnIndex="1" />
                        <Label text="Age:" GridPane.rowIndex="1" />
                        <Label fx:id="currentPatientAgeLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Phone:" GridPane.rowIndex="2" />
                        <Label fx:id="currentPatientPhoneLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Medical History:" GridPane.rowIndex="3" />
                        <Label fx:id="currentPatientHistoryLabel" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <VBox spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Consultation Details" />
            <GridPane hgap="15.0" vgap="15.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Chief Complaint" />
                        <TextArea fx:id="complaintArea" prefRowCount="2" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="1">
                     <children>
                        <Label text="Symptoms" />
                        <TextArea fx:id="symptomsArea" prefRowCount="2" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.rowIndex="1">
                     <children>
                        <Label text="Physical Examination" />
                        <TextArea fx:id="examinationArea" prefRowCount="2" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="Preliminary Diagnosis" />
                        <TextArea fx:id="diagnosisArea" prefRowCount="2" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" spacing="15.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                     <children>
                        <Button onAction="#sendToLab" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Send to Lab" />
                        <Button onAction="#createPrescription" prefWidth="120.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Create Prescription" />
                        <Button onAction="#completeConsultation" prefWidth="120.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Complete Visit" />
                     </children>
                  </HBox>
                  <Label fx:id="consultationStatusLabel" style="-fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>