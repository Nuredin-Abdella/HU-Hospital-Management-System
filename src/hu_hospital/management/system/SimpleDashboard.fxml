<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu_hospital.management.system.FXMLDocumentController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 20;" text="HU Hospital Management System">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Quick Stats" />
                  <Label fx:id="totalPatientsLabel" text="Total Patients: 0" />
                  <Label fx:id="waitingPatientsLabel" text="Waiting Patients: 0" />
                  <Label fx:id="activeDoctorsLabel" text="Active Doctors: 0" />
                  <Label fx:id="pendingTestsLabel" text="Pending Tests: 0" />
               </children>
            </VBox>
            <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Quick Actions" />
                  <Button onAction="#openPatientRegistrationWindow" prefWidth="200.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Patient Registration" />
                  <Button onAction="#openDoctorConsultationWindow" prefWidth="200.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Doctor Consultation" />
                  <Button onAction="#openLaboratoryWindow" prefWidth="200.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Laboratory" />
                  <Button onAction="#openPharmacyWindow" prefWidth="200.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Pharmacy" />
               </children>
            </VBox>
         </children>
      </HBox>
      
      <VBox spacing="10.0">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Patient Queue" />
            <TableView fx:id="queueTableView" prefHeight="300.0">
              <columns>
                <TableColumn fx:id="queueNumberColumn" prefWidth="75.0" text="Queue #" />
                <TableColumn fx:id="patientNameColumn" prefWidth="150.0" text="Patient Name" />
                  <TableColumn fx:id="patientIdColumn" prefWidth="100.0" text="Patient ID" />
                  <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                  <TableColumn fx:id="registrationTimeColumn" prefWidth="150.0" text="Registration Time" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>